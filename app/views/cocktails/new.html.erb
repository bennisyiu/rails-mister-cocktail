<div class="container">
  <h1>🍹 One more? YES, please! 🍸</h1>
  <div class="form-card">
    <%= simple_form_for(@cocktail) do |f| %>
    <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :category, collection: ['Vodka', 'Gin', 'Rum', 'Bourbon', 'Scotch', 'Whiskey', 'Tequila', 'Brandy', 'Other'] %>
    <%= f.input :photo, label: 'Put photo url here', hint: 'you may find a photo later!' %>
    <%= f.button :submit, class: "btn-primary" %>
    <% end %>
  </div>
</div>
